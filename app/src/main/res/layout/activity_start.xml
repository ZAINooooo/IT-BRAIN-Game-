<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/skip_text_size"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="@dimen/common_dimens_5"
        android:layout_marginLeft="14dp" />



    <TextView
        android:id="@+id/idInstructionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_dimens_80"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:textColor="#FF4500" />


    <!--android:text="@string/instrution_title"-->

    <TextView
        android:id="@+id/idInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:textColor="#ffffff"
        android:textSize="@dimen/instruction_text_size"
        android:layout_below="@+id/idInstructionTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/common_dimens_30"/>

    <TextView
        android:id="@+id/idQuizInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_instructions"
        android:textSize="@dimen/instruction_text_size"
        android:textColor="#ffffff"
        android:layout_below="@+id/idInstruction"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/common_dimens_30" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_the_best"
        android:textSize="@dimen/instruction_text_size"
        android:textColor="#ffffff"
        android:layout_below="@+id/idQuizInstruction"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/common_dimens_30" />

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="200dp"
        android:layout_height="@dimen/image_height_weight"
        android:text="@string/start"
        android:textSize="@dimen/start_text_size"
        android:background="@drawable/circlulartextview"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/start_bottom_margin" />


</RelativeLayout>