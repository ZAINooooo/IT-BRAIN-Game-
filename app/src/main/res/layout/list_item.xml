<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">
    <TextView
        android:id="@+id/idItemName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/item_top_padding"
        android:paddingBottom="@dimen/item_top_padding"
        android:paddingLeft="@dimen/item_top_padding"
        android:foregroundGravity="center_horizontal"
        android:textColor="@android:color/black" />
    <ImageView
        android:id="@+id/image_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ok"
        android:layout_marginTop="@dimen/item_tick_top_padding"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/gridview_spacing" />

</RelativeLayout>